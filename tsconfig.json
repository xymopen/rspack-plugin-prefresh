{
  "compilerOptions": {
    "module": "Node16", // DO NOT CHANGE: https://github.com/web-infra-dev/rspack/pull/4650
    "moduleResolution": "Node16",
    "target": "ES2018",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "types": ["webpack-env"],
  },
  "include": ["src"]
}
